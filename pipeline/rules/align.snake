''' rules to align 23cp data '''

import os
import glob

rule mhv_align:
  input:
      "/beevol/home/ancarr/data/23cp-seq/2017-08-25/fastq/{sample}.umi.fq.gz"
  output:
      "results/bam/{sample}.mhv.bam",
  params:
    sample = SAMPLES,
    job_name = "mhv.bowtie",
    memory = "select[mem>30] rusage[mem=30]",
  log:
    "results/bam/mhv/{sample}_align.txt"
  threads:12

  shell:
    """
    bowtie2 \
        -p {threads} \
        -U {input} \
        -x {VIRAL_IDX} \
        | samtools view -h - \
        | samtools sort \
          -@ {threads} \
          -o {output}

    samtools index \
      -@ {threads} \
      {output}
    """

